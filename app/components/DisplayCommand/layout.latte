<div class="row">
	<span class="col-md-2 col-lg-2 col-xs-2">
		{$iterator->getCounter()}.
		<span class="navbar-right">
			{$command->getCoordinates()}
		</span>
	</span>
	<span class="col-md-2 col-lg-2 col-xs-2">
		{$command->getAction()}
	</span>
	<span class="col-md-3 col-lg-3 col-xs-2">
		{block content}
		{/block}
	</span>
	<span class="col-md-1 col-lg-1 col-xs-2">
		<a class="btn btn-danger" n:href="remove!, uuid => $command->getUuid()->toString()">Delete</a>
	</span>
	<span class="col-md-1 col-lg-1 col-xs-1">
		{block edit}
		{/block}
	</span>
	<span class="col-md-1 col-lg-1 col-xs-1">
		{if $command->isDisabled()}
			<a class="btn btn-success" n:href="enable!, uuid => $command->getUuid()->toString()">Enable</a>
		{else}
			<a class="btn btn-warning" n:href="disable!, uuid => $command->getUuid()->toString()">Disable</a>
		{/if}
	</span>
	<span class="col-md-1 col-lg-1 col-xs-1 up-down-arrows">
		{if !$iterator->isFirst()}
			<p>
				<a n:href="moveUp!, uuid => $command->getUuid()->toString()">
					<span class="glyphicon glyphicon-chevron-up"></span>
				</a>
			</p>
		{else}
			<p>
				&nbsp;
			</p>
		{/if}
		{if !$iterator->isLast()}
			<p>
				<a n:href="moveDown!, uuid => $command->getUuid()->toString()">
					<span class="glyphicon glyphicon-chevron-down"></span>
				</a>
			</p>
		{/if}
	</span>
</div>
